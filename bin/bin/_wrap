# vim:set ft=sh:
_bind() {
	_bind_arg=$1
	shift
	for _path in "$@"; do
		args+=("$_bind_arg" "$_path" "$_path")
	done
}

bind() {
	_bind --bind-try "$@"
}

robind() {
	_bind --ro-bind-try "$@"
}

devbind() {
	_bind --dev-bind-try "$@"
}

tmpfs() {
	_bind_arg="--tmpfs"
	for _path in "$@"; do
		args+=("$_bind_arg" "$_path")
	done
}
